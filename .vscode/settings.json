{
    "editor.tokenColorCustomizations": {        
        "comments": "#00960c"
    },
    "openInGitHub.remote.name": "/QuentinBultinck/RetroAchievements",
    "todo-tree.general.tags": [
        "$",

        "รท",

        "DONE",
        "OK",
        "WORKING",
        "REWORKED",

        "TODO",

        "FIXME",
        "BUG",

        "OFF",

        "WIP",
        "TEST",
        "TESTING",

        "IDEA",
        "CONCEPT",

        "DEV_NOTE"
    ],
    "todo-tree.general.tagGroups": {
        "DONE": [
            "DONE",
            "WORKING",
            "OK",
            "REWORKED"
        ],
        "FIXME": [
            "FIXME",
            "BUG",
        ],
        "TEST": [
            "TEST",
            "TESTING"
        ],
        "IDEA": [
            "IDEA",
            "CONCEPT"
        ]
    },
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#1cdb07",
        "background": "#164f04",
        "type": "tag-and-comment", 
        "opacity": 42,              
        "icon": "info",
        "gutterIcon": true
    },
    "todo-tree.highlights.customHighlight": {
        "$": {
            "foreground": "#02a80a",
            "background": "#6a7c05",
            "opacity": 12,
            "icon": "bookmark",
            "type": "text-and-comment",
            "rulerLane": "right",
            "hideFromStatusBar": true,  // StatusBar is bottomleft
            "hideFromActivityBar": true, // ActivityBar is count in the side menu panel
            "hideFromTree": true // Hide from side menu panel, only show in-editor window
        },
        "รท": {
            "foreground": "#02a80a",
            "background": "#6a7c05",
            "opacity": 12,
            "icon": "link",
            "type": "text-and-comment",
            "rulerLane": "right",
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "TODO": {
            "icon": "issue-draft" 
        },
        "WIP": {
            "foreground": "#eaff71",
            "background": "#8a8100",            
            "type": "whole-line", 
            "opacity": 37,
            "icon": "tools"
        },
        "TEST": {
            "foreground": "#fafc8a",
            "background": "#aa6f00",
            "type": "line", 
            "opacity": 37,  
            "icon": "unverified"
        },
        "DONE": {   
            "icon": "verified",
            "hideFromStatusBar": true, 
            "hideFromActivityBar": true,
            "hideFromTree": true
        },
        "FIXME": {
            "foreground": "#fc5353",
            "background": "#612c03",
            "type": "text-and-comment",             
            "icon": "stop"
        },
        "OFF": {
            "foreground": "#ffffff",
            "background": "#990000",
            "type": "tag-and-comment",
            "opacity": 50,            
            "icon": "no-entry"
        },
        "IDEA": {
            "foreground": "#53f9ff",
            "background": "#005b6b",
            "opacity" : 42,
            "type": "text-and-comment", 
            "icon": "light-bulb"
        },
        "DEV_NOTE": {
            "icon": "info",
            "hideFromStatusBar": false, 
            "hideFromActivityBar": true,
            "hideFromTree": false
        }
    },
    "todo-tree.highlights.enabled": true,
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS)|^//\\s*\\[x\\]|^//\\s*\\[ \\])",
    "todo-tree.filtering.includedWorkspaces": [
        "RAscripts"
    ], 
    "todo-tree.filtering.excludeGlobs": [
        "RAscripts\/PSP\/ShadowOfDestiny\/Region_USA\/SoD_Generated.rascript"
    ],
    "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
    "todo-tree.general.statusBar": "current file",
    "todo-tree.general.showActivityBarBadge": true,
    "todo-tree.tree.showBadges": true,
    "todo-tree.tree.scanMode": "open files",
    "todo-tree.tree.disableCompactFolders": false,
    "todo-tree.tree.showCountsInTree": true
}