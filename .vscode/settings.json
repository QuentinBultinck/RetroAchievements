{
    "editor.tokenColorCustomizations": {        
        "comments": "#00960c"
    },
    "openInGitHub.remote.name": "/QuentinBultinck/RetroAchievements",
    "todo-tree.general.tags": [
        "$",

        "◦",

        "•",

        "VERIFIED",
        "MODIFIED",
        "UPDATED",

        "TODO",
        "PENDING",
        
        "WIP",
        "QA",
        "TESTING",

        "BUG",
        "ERROR",

        "DISABLED"
        "OFF",
        "INACTIVE",

        "UNVERIFIED",
        "TEST",

        "IDEA",
        "CONCEPT",

        "DEV_NOTE"
    ],
    "todo-tree.general.tagGroups": {
        "VERIFIED": [
            "VERIFIED",
            "MODIFIED",
            "UPDATED"
        ],
        "TODO": [
            "TODO",
            "PENDING",
        ],
        "BUG": [
            "ERROR",
            "BUG"
        ],
        "TESTING": [
            "WIP",
            "TESTING",
            "QA",
        ],
        "DISABLED": [
            "DISABLED",
            "OFF",
            "INACTIVE"
        ],
        "UNVERIFIED": [
            "TEST",
            "UNVERIFIED",
        ],
        "IDEA": [
            "IDEA",
            "CONCEPT"
        ]
    },
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#1cdb07",
        "background": "#164f04",
        "type": "tag-and-comment", 
        "opacity": 42,              
        "icon": "info",
        "gutterIcon": true
    },
    "todo-tree.highlights.customHighlight": {
        "$": {
            "foreground": "#02a80a",
            "background": "#6a7c05",
            "opacity": 12,
            "icon": "bookmark", // Default icon list here -> https://primer.style/foundations/icons/
            "type": "text-and-comment",
            "rulerLane": "right",
            "hideFromStatusBar": true,  // StatusBar is bottomleft
            "hideFromActivityBar": true, // ActivityBar is count in the side menu panel
            "hideFromTree": true // Hide from side menu panel, only show in-editor window
        },
        "◦": {
            "foreground": "#02a80a",
            "background": "#6a7c05",
            "opacity": 12,
            "icon": "$(circle-small)", // This icon is from https://microsoft.github.io/vscode-codicons/dist/codicon.html
            "type": "text-and-comment",
            "rulerLane": "right",
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "•": {
            "foreground": "#02a80a",
            "background": "#6a7c05",
            "opacity": 12,
            "icon": "$(circle-small-filled)",
            "type": "text-and-comment",
            "rulerLane": "right",
            "hideFromStatusBar": true,
            "hideFromActivityBar": true
        },
        "TESTING": {
            "foreground": "#eaff71",
            "background": "#8a8100",            
            "type": "whole-line", 
            "opacity": 37,
            "icon": "tools"
        },
        "TODO": {
            "icon": "issue-draft" 
        },
        "UNVERIFIED": {
            "foreground": "#fafc8a",
            "background": "#aa6f00",
            "type": "line", 
            "opacity": 37,  
            "icon": "unverified"
        },
        "VERIFIED": {   
            "icon": "verified",
            "hideFromStatusBar": true, 
            "hideFromActivityBar": true,
            "hideFromTree": true
        },
        "BUG": {
            "foreground": "#fc5353",
            "background": "#612c03",
            "type": "text-and-comment",             
            "icon": "stop"
        },
        "DISABLED": {
            "foreground": "#c7c7c7",
            "background": "#610000",
            "type": "text-and-comment",
            "opacity": 50,
            "icon": "no-entry",
            "hideFromStatusBar": true,
            "hideFromActivityBar": true,
            "hideFromTree": true
        },
        "IDEA": {
            "foreground": "#53f9ff",
            "background": "#005b6b",
            "opacity" : 42,
            "type": "text-and-comment", 
            "icon": "light-bulb"
        },
        "DEV_NOTE": {
            "icon": "info",
            "hideFromStatusBar": false, 
            "hideFromActivityBar": true,
            "hideFromTree": false
        }
    },
    "todo-tree.highlights.enabled": true,
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS)|^//\\s*\\[x\\]|^//\\s*\\[ \\])",
    "todo-tree.filtering.includedWorkspaces": [
        "RAscripts"
    ], 
    "todo-tree.filtering.excludeGlobs": [
        "RAscripts\/PSP\/ShadowOfDestiny\/Region_USA\/SoD_Generated.rascript"
    ],
    "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
    "todo-tree.general.statusBar": "current file",
    "todo-tree.general.showActivityBarBadge": true,
    "todo-tree.tree.showBadges": true,
    "todo-tree.tree.scanMode": "open files",
    "todo-tree.tree.disableCompactFolders": false,
    "todo-tree.tree.showCountsInTree": true
}